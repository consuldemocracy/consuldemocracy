<div class="survey-results margin">

  <!-- Resultados generales -->
  <div class="row" data-equalizer>
    <div class="small-12 medium-6 column">
      <div class="callout" data-equalizer-watch>
        <h3>Total encuestas válidas</h3>
        <p class="big-number-stat">26.961</p>
      </div>
    </div>

    <div class="small-12 medium-6 column" data-equalizer-watch>
      <p>
        <span class="legend">Encuestas totales</span><br>
        <span class="number-stat">28.249</span>
      </p>
      <p>
        <span class="legend">Encuestas nulas</span><br>
        <span class="number-stat">1.288</span><br>
        <small>(<strong>WEB</strong>: 0, <strong>010</strong>: 1271, <strong>PAPEL</strong>: 17)</small>
      </p>
      <p>
        <span class="legend">Encuestas válidas</span><br>
        <span class="number-stat">26.961</span>
      </p>
    </div>
  </div>

  <hr class="double">

  <!-- Canales de participación -->
