        <%= image_tag ('survey_results/channel_phone.png'), alt: ""  %>
        <p>010 (28,21%)</p>
        <p class="big-number-stat">7.605</p>
      </div>
    </div>

    <div class="small-12 medium-4 column">
      <div class="panel text-center">
        <%= image_tag ('survey_results/channel_paper.png'), alt: ""  %>
        <p>PAPEL (0,86%)</p>
        <p class="big-number-stat">232</p>
      </div>
    </div>
  </div>

  <hr class="double">

