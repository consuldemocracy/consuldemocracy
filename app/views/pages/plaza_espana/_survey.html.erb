        <canvas id="chart-channels" width="300" height="300"></canvas>
      </div>

      <div class="small-12 medium-6 large-4 column relative" data-equalizer-watch>
        <ul class="chart-legend absolute">
          <li>
            <span class="label" style="background: #00ad51"></span>
            <strong>Web</strong>: 19.124 (70,93%)
          </li>
          <li>
            <span class="label" style="background: #007dc3"></span>
            <strong>010</strong>: 7.605 (28,21%)
          </li>
          <li>
            <span class="label" style="background: #ffdc08"></span>
            <strong>Papel</strong>: 232 (0,86%)
          </li>
        </ul>
      </div>
    </div>

    <hr class="double">

    <div class="clear"></div>

    <div class="small-12 medium-4 column">
      <div class="panel text-center">
        <%= image_tag ('survey_results/channel_web.png'), alt: "" %>
        <p>WEB (70,93%)</p>
        <p class="big-number-stat">19.124</p>
      </div>
    </div>

    <div class="small-12 medium-4 column">
