$(".suggested-images-container").replaceWith("<%= j render("image_suggestions", resource_type: @resource_type, resource_id: @resource_id, resource_attributes: @resource_attributes) %>");

// Hide "Choose image" button if suggested images are available
if ($(".js-attach-suggested-image").length > 0) {
  $(".direct-upload label.button").addClass("hide");
} else {
  $(".direct-upload label.button").removeClass("hide");
}
