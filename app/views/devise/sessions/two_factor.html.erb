<div class="card">
  <div class="card-header"><%= t("devise.sessions.otp.header") %></div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), method: :post) do |f| %>

      <%= f.text_field :otp_attempt, label: t("devise.sessions.otp.label"), hint: t("devise.sessions.otp.backup_code_hint") %>

      <div class="actions">
        <%= f.submit t("devise.sessions.otp.login_button"), class: "button" %>
      </div>
    <% end %>
  </div>
</div>
