<div class="no-margin-top">
  <div class="row all-screen">

    <div class="small-12 medium-8 column home-quote">
      <h1 class="home-quote-font"> <%= t("welcome.welcome.quote") %> </h1>
      <%= link_to "Quiero saber m치s", more_info_path, class: "home-subtitle" %>

    </div>

    <div class="small-12 medium-4 column home-column2">
      <div class="home-info">
