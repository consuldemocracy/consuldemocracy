<div class="no-margin-top">

    <div class="hero">
      <div class="row all-screen collapse">
        <div class="small-10 medium-7 large-6 columns">
          <div class="home-info">
            <p class="home-info-dates label float-right"> <%= Setting["home.info-date"] %> </p>
            <h4 class="small blue"> <%= Setting["home.info-epigraph"] %> </h4>
            <h1 class="home-info-title"> <%= Setting["home.info-title"] %> </h1>
            <%= link_to Setting["home.info-go_to"], Setting["home.info-go_to_link"], class: "button primary" %>
          </div>
        </div>
        <div class="small-2 medium-5 large-6 columns home-img">
          <%= image_tag(image_path_for('foto1.jpg')) %>
        </div>
      </div>

      <div class="row all-screen collapse">
        <div class="small-12 medium-4 medium-offset-8 large-5 large-offset-7 columns">
          <div class="hero-quote">
            <h2> <%= Setting["home.main-title"] %> </h2>
            <div class="text-right">
              <%= link_to Setting["home.main-subtitle"], Setting["home.main-subtitle-link"], class: "hollow button secondary" %>
            </div>
        </div>
        </div>
      </div>
    </div>

</div>

  <main>

