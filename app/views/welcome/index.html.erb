          <div class="small-9 medium-9 large-9 column">
            <p><%= t("welcome.project.description") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>


    <div class="home-proposals">
      <% if Proposal.all.any? %>
      <h1 class="text-center home-title"> <%= t("welcome.proposals.title") %> </h1>
      <%= link_to t("welcome.proposals.link_to"), proposals_path, class: 'button button-home-proposals text-center' %>
      <div class="row">
        <div class="small-12 medium-4 column">
          <%= render "proposal", proposal: most_voted_proposals.first, proposal_type: "Más votadas", proposal_class: "proposal-type most-voted" %>
        </div>
        <div class="small-12 medium-4 column">
          <%= render "proposal", proposal: Proposal.sort_by_created_at.first, proposal_type: "Más activas", proposal_class: "proposal-type most-activated" %>
        </div>
        <div class="small-12 medium-4 column">
          <%= render "proposal", proposal: Proposal.sort_by_most_commented.first, proposal_type: "Más nuevas", proposal_class: "proposal-type newest" %>
        </div>
      </div>
      <% end %>
    </div>

</main>
