                        placeholder: "" %>
      </div> -->

      <div class="small-12 column column-with-margin">
        <%= f.label :why, t("proposals.form.proposal_why") %>
        <p class="note"><%= t("proposals.form.proposal_why_note") %></p>
        <%= f.text_area :why, rows: 2, label: false,
                        placeholder: "" %>
      </div>

      <div id="js-suggest"></div>

      <!-- <div class="small-12 column">
        <%= f.label :question, t("proposals.form.proposal_question") %>
