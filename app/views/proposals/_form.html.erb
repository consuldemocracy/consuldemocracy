    <div  id="problem-display">
      <div class="small-12 column problem-display">
          <!-- TODO: Acá se debe mostrar el problema elegido -->
          <div class="summary-problem float-left">
            <%= link_to problem_path(challenge) do %>
              <h3 class="title-challenge white"><%= challenge.title%> </h3>
              <%= f.hidden_field :problem_id, :value => challenge.id %>
              <p class="white"> <%= challenge.summary%> </p>
              <p> <%= challenge.call_to_action %> </p>
              <% if challenge.budget? %>
                <p class="white"> <%= t("proposals.form.problem.budget") %> <%= challenge.budget%> </p> </br>
              <% end %>
              <p> <%= t("proposals.form.problem.community") %> <%= challenge.geozones_name %>
              </p>
            <% end %>
          </div>
          <div class="deadline-problem float-right">
            <span> Quedan</span> <strong class="mark-days">
            <%=distance_of_time_in_days(challenge.ends_at, Date.today)%></strong><span> días para crear propuestas </span>
          </div>
      </div>
  </div>

    <!-- TODO: Por ahora las gezones serán las mismas que del desafío por defceto  -->
    <% challenge.geozones.map(&:id).each do |id| %>
      <%= hidden_field_tag "proposal[geozone_ids][]", id %>
    <% end %>

    <%= f.hidden_field :for_challenge, :value => true %>

    <div class="text-width">
      <div class="small-12 column">
        <%= f.label :title, t("proposals.form.proposal_title") %>
        <%= f.text_field :title, maxlength: Proposal.title_max_length, placeholder: t("proposals.form.proposal_title"), label: false, data: {js_suggest_result: "js_suggest_result", js_suggest: "#js-suggest", js_url: suggest_proposals_path}%>
      </div>

      <div class="small-12 column">
        <%= f.label :summary, t("proposals.form.proposal_summary") %>
        <p class="note"><%= t("proposals.form.proposal_summary_note") %></p>
        <%= f.text_area :summary, rows: 3, maxlength: 200, label: false %>
      </div>

      <div class="small-12 column">
        <%= f.label :description, t("proposals.form.proposal_text") %>
        <p class="note"><%= t("proposals.form.proposal_description_note") %></p>
        <%= f.text_area :description, rows: 5, label: false %>
      </div>
      <!--
      <div class="small-12 column column-with-margin">
        <%= f.label :what, t("proposals.form.proposal_what") %>
