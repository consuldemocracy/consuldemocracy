<div class="main-indented-content">
  <div class="budget-investment-new row">
    <div class="column">
      <div class="small-12">
        <div class="row">
          <div class="small-12 medium-7 column form">
            <%= link_to budget_investments_path(@budget), class: "back" do %>
              <i class="custom-icon arrow-small-left"></i>&nbsp;<span class="text"><%= t("shared.back") %></span>
            <% end %>

            <h1><%= t("custom.titles.edit") %></h1>

            <%= render "/budgets/investments/edit_form", form_url: budget_investments_path(@budget) + "/" + @investment.id.to_s %>
          </div>
          <div class="small-12 medium-5 column">
            <div class="sidebar">
              <h3><%= t("custom.headings.instructions") %></h3>
              <%= raw t("custom.headings.instructions_description") %>
              <hr />
              <h3><%= t("custom.headings.headings") %></h3>
              <ul class="custom-list recommendations">
                <%= raw t("custom.headings.headings_sidebar") %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
