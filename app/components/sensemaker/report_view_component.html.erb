<div class="sensemaker">
  <div class="row">
    <div class="small-12 medium-9 column">
      <section>
        <h1><%= t("sensemaker.report_view.title") %></h1>
        <p><%= introductory_text %></p>
        <p><%= explanatory_text %> <%= report_description %></p>
      </section>

      <section>
        <h2><%= t("sensemaker.report_view.metadata_title") %></h2>
        <dl>
          <% if run_timestamp %>
            <dt><%= t("sensemaker.report_view.run_timestamp_label") %></dt>
            <dd><%= run_timestamp %></dd>
          <% end %>
          <dt><%= t("sensemaker.report_view.comments_analysed_label") %></dt>
          <dd><%= comments_count_placeholder %></dd>
        </dl>

        <%= link_to view_report_text, report_url, class: "button", target: "_blank" %>
      </section>
    </div>
  </div>
</div>
