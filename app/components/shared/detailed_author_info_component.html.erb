<% if author.hidden? || author.erased? %>
  <span class="icon-deleted author-deleted"></span>
  <span class="author deleted">
    <%= t("shared.author_info.author_deleted") %>
  </span>
<% else %>
  <%= render Shared::AvatarComponent.new(author, size: 32, class: "author-photo") %>
  <span class="author">
    <%= link_to author.name, user_path(author) %>
  </span>

  <% if author.display_official_position_badge? %>
    <span class="label round level-<%= author.official_level %>">
      <%= author.official_position %>
    </span>
  <% end %>
<% end %>

<% if author.verified_organization? %>
  <span class="label round is-association">
    <%= t("shared.collective") %>
  </span>
<% end %>
